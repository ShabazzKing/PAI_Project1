extends ../layout

block content
    h1= title
    if data.length > 0
        table.table
            thead
                tr
                    th(scope='col') Nr
                    th(scope='col') Oferent
                    th(scope='col') Wartość oferty
            tbody
            each val, index in data
                tr
                    td(scope='row')= index + 1
                    td= val.contractor
                    td= val.offer_value + ' PLN'
    else
        p Przetarg zakończony bez rozstrzygnięcia
